import React from 'react';

/**
 * WeatherDisplay component to display weather information.
 * 
 * @param {Object} props - Component properties.
 * @param {string} props.weather - Weather information to display.
 * @returns {JSX.Element}
 */
const WeatherDisplay = ({ weather }) => {
    return (
        <div className="weather-display">
            {weather ? <p>{weather}</p> : <p>No weather data available.</p>}
        </div>
    );
};

export default WeatherDisplay;