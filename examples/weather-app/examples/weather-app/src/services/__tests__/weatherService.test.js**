import { fetchWeather } from '../weatherService';

describe('Weather Service', () => {
    it('fetches weather data successfully', async () => {
        const data = await fetchWeather('London');
        expect(data).toContain('in London');  // Expect the response to contain the location name
    });

    it('throws an error on fetch failure', async () => {
        await expect(fetchWeather('InvalidCity')).rejects.toThrow('Error fetching weather data');
    });
});