  "lang": "en",
  "dir": "ltr",
  
  "prefer_related_applications": false,
  
  "shortcuts": [
    {
      "name": "Current Weather",
      "short_name": "Current",
      "description": "View current weather conditions", 
      "url": "./index.html#current",
      "icons": [
        {
          "src": "assets/icons/shortcut-current.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "5-Day Forecast",
      "short_name": "Forecast", 
      "description": "View 5-day weather forecast",
      "url": "./index.html#forecast",
      "icons": [
        {
          "src": "assets/icons/shortcut-forecast.png", 
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Favorites",
      "short_name": "Favorites",
      "description": "View favorite locations",
      "url": "./index.html#favorites", 
      "icons": [
        {
          "src": "assets/icons/shortcut-favorites.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "./index.html",
    "method": "GET", 
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+weather",
      "url": "./index.html?location=%s"
    }
  ]
