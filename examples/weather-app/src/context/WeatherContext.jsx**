// WeatherContext.jsx
import React, { createContext, useState, useContext } from "react";

// Create WeatherContext
const WeatherContext = createContext();

/**
 * WeatherContextProvider Component
 * Provides the weather context to the application.
 * 
 * @param {Object} props - React component properties
 * @param {React.ReactNode} props.children - Children components to wrap in the context
 * 
 * @returns {JSX.Element} - Weather context provider
 */
export const WeatherContextProvider = ({ children }) => {
  const [weatherData, setWeatherData] = useState(null);

  return (
    <WeatherContext.Provider value={{ weatherData, setWeatherData }}>
      {children}
    </WeatherContext.Provider>
  );
};

/**
 * useWeatherContext Hook
 * Custom hook to access the weather context.
 * 
 * @returns {Object} - The weather context value
 */
export const useWeatherContext = () => {
  return useContext(WeatherContext);
};