// WeatherContext.test.jsx
import React from "react";
import { render, screen } from "@testing-library/react";
import { WeatherContextProvider, useWeatherContext } from "../../context/WeatherContext";

const TestComponent = () => {
  const { weatherData, setWeatherData } = useWeatherContext();
  setWeatherData({ temperature: 20, city: "Berlin" });
  return <div>{weatherData?.city}</div>;
};

test("WeatherContext provides default and updated values", () => {
  render(
    <WeatherContextProvider>
      <TestComponent />
    </WeatherContextProvider>
  );

  expect(screen.getByText("Berlin")).toBeInTheDocument();
});