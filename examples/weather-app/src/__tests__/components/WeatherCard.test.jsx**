// WeatherCard.test.jsx
import React from "react";
import { render } from "@testing-library/react";
import WeatherCard from "../../components/WeatherCard";

test("renders WeatherCard with provided props", () => {
  const { getByText } = render(
    <WeatherCard cityName="London" temperature="15" description="Sunny" />
  );

  expect(getByText("London")).toBeInTheDocument();
  expect(getByText("15 Â°C")).toBeInTheDocument();
  expect(getByText("Sunny")).toBeInTheDocument();
});